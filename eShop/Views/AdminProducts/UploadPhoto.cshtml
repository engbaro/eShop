@model eShop.Model.Product
<h2>Create</h2>


<form action="/AdminProducts/UploadPhoto" method="post" enctype="multipart/form-data" id="upload-photos-form">

    <div class="form-horizontal">
        <h4>Product photos</h4>
        You can add up to 5 photos for each product.
        If you wish to upload more than one photo choose a photo to be the main one. if not the first photo by default will be the main photo.
        <hr />
        <input type="radio" name="Main" class="main-image"id="main-1" disabled/>
        <label for="main-1"></label>

        <input type="file" name="ProductImage" class="files" id="1"/>

        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="button" id="add-more-photos" class="btn btn-default">add another photo</button>
        <div class="add-more-photos-div">

        </div>
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="submit-product-photo" class="btn btn-secondary" value="upload"/>
            </div>
        </div>
    </div>
</form>
<div class="hide dynamic-radio">
    <input type="radio" name="Main" class="main-image" disabled/>
    <label for=""></label>

    <input type="file" name="ProductImage" class="files" />
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>


