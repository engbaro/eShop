
@model IEnumerable<eShop.Model.OrderItem>
   <div class="col-md-9">
       @if(ViewBag.message != null)
       {
       <br/>
       <br/>
      
       <div class="alert alert-danger" role="alert">@ViewBag.message</div>
       
       }
       else{
       
       <table class="basket-table col-md-12">
           <thead>
               <tr>
                   <th>Product Photo</th>
                   <th>Product name</th>
                   <th>Product Price</th>
                   <th>Delete product</th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
               {
                   var productID = @item.ProductId;
                   <tr class="basket-row">
                      @foreach (var product in ViewBag.allProducts)
                      {
                          if (@product.Id == productID)
                          {
                               <td class="col-md-4">
                                   <a href="#" class="thumbnail">
                                       <img src="/product-images/Thumbnails/@product.ProductImage.ImageLocation" alt="productImage" class="img-thumbnail">
                                   </a>
                               </td>
                               <td class="col-md-4">                                     
                                           @product.Description
 
                        </td>
                          }
                      }
                       <td class="col-md-2">@item.Price</td>
                       <td class="col-md-2"><a href="#" class="remove-item" id="@item.Id"> <i class="fa fa-times fa-lg" aria-hidden="true"></i></a></td>
                      

                     </tr>
               }

           </tbody>

       </table>

       }

   </div>